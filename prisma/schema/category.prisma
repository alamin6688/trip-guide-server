model Category {
    id    String       @id @default(uuid())
    title TourCategory
    icon  String

    guideCategories GuideCategories[]
    listings        Listing[]

    @@map("categories")
}

model GuideCategories {
    categoryId String
    guideId    String

    guide      Guide    @relation(fields: [guideId], references: [id])
    categories Category @relation(fields: [categoryId], references: [id])

    @@id([categoryId, guideId])
    @@map("guide_categories")
}
