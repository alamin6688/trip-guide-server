model Listing {
  id      String @id @default(uuid())
  guideId String

  title       String
  description String
  itinerary   String

  price        Float
  durationHours Int

  meetingPoint String
  maxGroupSize Int

  images String[]

  city     String
  isActive Boolean @default(true)

  guide    Guide     @relation(fields: [guideId], references: [id])
  bookings Booking[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("listings")
}
